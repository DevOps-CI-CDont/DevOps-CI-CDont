FROM golang:1.20 AS builder

ARG DB_HOST
ARG DB_PORT
ARG DB_TEST_NAME
ARG DB_USER
ARG DB_PASSWORD


WORKDIR /user/src/app

COPY go.mod go.sum ./
RUN go mod download && go mod verify

COPY . .

WORKDIR /user/src/app
RUN go build -v -o /usr/local/bin/app ./Main

EXPOSE 8080
EXPOSE 8081

ENV PORT 8080
ENV API_BASE_URL http://138.68.93.147:8080
ENV DB_HOST $DB_HOST
ENV DB_PORT $DB_PORT
ENV DB_NAME $DB_NAME
ENV DB_USER $DB_USER
ENV DB_PASSWORD $DB_PASSWORD

CMD ["app"]